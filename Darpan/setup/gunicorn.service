[Unit]
Description=gunicorn daemon for Darpan
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/Darpan
ExecStart=/home/ubuntu/Darpan/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/home/ubuntu/Darpan/darpan.sock \
          config.wsgi:application

[Install]
WantedBy=multi-user.target
